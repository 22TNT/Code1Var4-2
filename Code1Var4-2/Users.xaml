<Window x:Class="Code1Var4_2.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code1Var4_2"
        mc:Ignorable="d"
        Title="Users" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="tasksDG" d:ItemsSource="{Binding Tasks}" Margin="0,41,0,10"/>
        <Label x:Name="statusLabel" Content="Статус:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="81"/>
        <ComboBox x:Name="statusComboBox" HorizontalAlignment="Left" Margin="96,14,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="statusComboBox_SelectionChanged"/>
        <Button x:Name="deleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="719,10,0,0" VerticalAlignment="Top" Click="deleteButton_Click" RenderTransformOrigin="0.253,0.542" Width="71"/>

    </Grid>
</Window>
